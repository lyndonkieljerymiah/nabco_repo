<!-- Modal -->
<div id="itemDialog" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <!-- item form -->
    <script type="text/ng-template" id="modalContent.html">
        <form id="frmItemEntry" data-action="@Url.Action("Update", "Item")">
            <div class="modal-header">
                <h3 class="modal-title" id="modal-title">Item Add</h3>
            </div>
            <div class="modal-body" id="modal-body">
                @Html.AntiForgeryToken()
                <div class="form-group">
                    <label for="ModelNo">Model No</label>
                    <input ng-model="modelNo" id="ModelNo" name="ModelNo" type="text" class="form-control" />
                </div>
                <div class="form-group">
                    <label for="Name">Name</label>
                    <input ng-model="name" id="Name" name="Name" type="text" class="form-control" />
                </div>
                <div class="form-group">
                    <label for="FinishingCode">Finishing Code</label>
                    <input ng-model="finishingCode" id="FinishingCode" name="FinishingCode" type="text" class="form-control" />
                </div>
                <div class="form-group">
                    <label for="Composition">Composition</label>
                    <input ng-model="composition" id="Composition" name="Composition" type="text" class="form-control" />
                </div>
                <div class="form-group">
                    <label>UOM</label>
                    <input ng-model="uom" id="UOM" name="UOM" class="form-control" />
                </div>
            </div>
            <div class="modal-footer">
                <button class="btn btn-primary" type="button" ng-click="$ctrl.ok()">OK</button>
                <button class="btn btn-warning" type="button" ng-click="$ctrl.cancel()">Cancel</button>
            </div>
        </form>
    </script>
    <!-- end item form -->
  
</div>